<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButton">
        <item name="android:background">@drawable/rounded_corner_10</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="MyEditText">
        <item name="android:background">@drawable/rounded_corner_10_border_no_fill</item>
        <item name="background">@drawable/rounded_corner_10_border_no_fill</item>
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="fontFamily">@font/lexenddeca_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.FWork.Spinner.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.FWork.Button.RoundedCorner.47" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_corner_47</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">10sp</item>
        <item name="backgroundTint">#1F6EE3</item>
    </style>

    <style name="Theme.FWork.Button.RoundedCorner.10" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_corner_10</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">10sp</item>
        <item name="backgroundTint">#1F6EE3</item>
    </style>

    <style name="Theme.FWork.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColorHint">#9B9B9B</item>
        <item name="startIconTint">#9B9B9B</item>
        <item name="passwordToggleDrawable">@drawable/ic_password_toggle</item>
        <item name="passwordToggleTint">#9B9B9B</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_stroke</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColorHint">#808080</item>
        <item name="startIconTint">#808080</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Theme.FWork.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.FWork.Dialog.Fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="MyDialogFullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Theme.FWork.BottomSheetDialog" parent="Base.V14.ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Style.FWork.BottomSheetDialog</item>
    </style>

    <style name="Theme.FWork.BottomSheetDialog.Fullscreen" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Style.FWork.BottomSheetDialog</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Style.FWork.BottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>