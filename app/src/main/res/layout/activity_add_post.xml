<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".post.AddPostActivity"
    android:background="#F9F9F9">

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_back"
            app:backgroundTint="@null"/>
        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Đăng tuyển"
            android:layout_gravity="center_horizontal"
            android:textColor="#150B3D"
            android:textSize="20sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:paddingHorizontal="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Tên công việc"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtJobName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Nhập tên công việc"
                    android:paddingBottom="15dp"
                    android:textColorHint="#AAA6B9"
                    android:backgroundTint="#AAA6B9"
                    android:textColor="#524B6B"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Chuyên ngành"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtMajor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Nhập chuyên ngành"
                    android:paddingBottom="15dp"
                    android:textColorHint="#AAA6B9"
                    android:backgroundTint="#AAA6B9"
                    android:textColor="#524B6B"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Kinh nghiệm"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/edtExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Nhập số năm kinh nghiệm"
                    android:paddingBottom="15dp"
                    android:textColorHint="#AAA6B9"
                    android:backgroundTint="#AAA6B9"
                    android:textColor="#524B6B"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Mô tả công việc"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/edtJobDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Nhập mô tả công việc"
                    android:paddingBottom="15dp"
                    android:textColorHint="#AAA6B9"
                    android:backgroundTint="#AAA6B9"
                    android:textColor="#524B6B"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Mức lương"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/edtSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Nhập mức lương"
                    android:paddingBottom="15dp"
                    android:textColorHint="#AAA6B9"
                    android:backgroundTint="#AAA6B9"
                    android:textColor="#524B6B"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Nơi làm việc"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <EditText
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_medium"
                        android:hint="Nhập địa chỉ làm việc"
                        android:paddingBottom="15dp"
                        android:textColorHint="#AAA6B9"
                        android:backgroundTint="#AAA6B9"
                        android:textColor="#524B6B"
                        android:textSize="14sp" />
                    <Button
                        android:id="@+id/btnPickOnMap"
                        app:backgroundTint="#FF9228"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_map_marker"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corner_15"
                android:backgroundTint="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Hình ảnh"
                    android:textColor="#5A2D22"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnAddImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_add_thick"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnPostUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#130160"
                android:layout_marginTop="20dp"
                android:paddingVertical="15dp"
                android:text="Đăng"
                android:visibility="visible"
                app:cornerRadius="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>