<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:ignore="MissingDefaultResource"
    android:gravity="center"
    android:clipToPadding="false"
    android:clipToOutline="false">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clipToPadding="false"
        android:outlineProvider="background">

        <TextView
            android:id="@+id/txvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Chào mừng bạn"
            android:elevation="10dp"
            android:textColor="#0D0140"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập để sử dụng ứng dụng"
            android:textColor="#524B6B"
            android:layout_marginBottom="50dp"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="left"
            android:textSize="14sp"
            android:textColor="#0D0140"
            android:fontFamily="@font/quicksand_bold"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.FWork.TextInputLayout"
            app:startIconDrawable="@drawable/ic_message"
            android:id="@+id/edtEmail"
            android:clipToPadding="false"
            android:outlineProvider="bounds">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:fontFamily="@font/quicksand_medium"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Mật khẩu"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="#0D0140"
            android:textSize="14sp"
            android:layout_marginTop="14dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.FWork.TextInputLayout"
            android:id="@+id/edtPassword"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/ic_lock"
            android:outlineProvider="bounds"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:fontFamily="@font/quicksand_medium"
                android:hint="Mật khẩu "
                android:inputType="textPassword"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Quên mật khẩu?"
            android:textColor="#0D0140"
            android:textSize="15sp"
            android:layout_marginVertical="20dp"
            android:textAlignment="viewEnd"
            android:layout_gravity="right"
            tools:text="Quên mật khẩu?" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner_10"
            app:backgroundTint="#0D0140"/>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/relLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_google"
            android:fontFamily="@font/quicksand_bold"
            android:textAllCaps="false"
            android:text="Đăng nhập với Google"
            android:textColor="#5A2D22"
            android:textSize="15sp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_facebook"
            android:fontFamily="@font/quicksand_bold"
            android:text="Đăng nhập với Facebook"
            android:textAllCaps="false"
            android:textColor="#5A2D22"
            android:textSize="15sp"
            app:backgroundTint="#FFFFFF"/>

        <TextView
            android:id="@+id/txtCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/sign_up_suggest"
            android:textColor="#524B6B"
            android:textSize="13sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>

