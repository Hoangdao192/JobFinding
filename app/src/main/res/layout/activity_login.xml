<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Chào mừng bạn"
                android:elevation="10dp"
                android:textColor="#0D0140"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập để sử dụng ứng dụng"
                android:textColor="#524B6B"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/quicksand_bold"
                android:text="Email"
                android:textColor="#0D0140"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.FWork.TextInputLayout"
                app:startIconDrawable="@drawable/ic_message"
                android:id="@+id/tilEmail">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_border"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="#0D0140"
                    android:hint="example@example.com"
                    android:textColorHint="#aaaaaa"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Mật khẩu"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#0D0140"
                android:textSize="14sp"
                android:layout_marginTop="14dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.FWork.TextInputLayout"
                android:id="@+id/tilPassword"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/ic_lock"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_border"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Mật khẩu "
                    android:textColor="#0D0140"
                    android:textColorHint="#aaaaaa"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="Quên mật khẩu?"
                android:textColor="#0D0140"
                android:textSize="15sp"
                android:layout_marginVertical="20dp"
                android:layout_gravity="end"
                tools:text="Quên mật khẩu?" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_10"
                app:backgroundTint="#0D0140"/>

            <TextView
                android:id="@+id/txtCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/sign_up_suggest"
                android:textColor="#524B6B"
                android:textSize="13sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

